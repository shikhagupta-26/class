pipeline {
    agent any
    stages {
        stage('Install') {
            steps { 
            sh 'npm install' 
            sh 'npm install -g serve'
            echo "Installing..."
            }
        }
        stage('build') {
            steps { 
            sh 'npm run ng -- build' 
            echo "Building..."
            }
        }
        stage('deploy') {
            steps { 
            sh 'serve -s build' 
            echo "Deploying..."
         }
        }
       
    }
}
